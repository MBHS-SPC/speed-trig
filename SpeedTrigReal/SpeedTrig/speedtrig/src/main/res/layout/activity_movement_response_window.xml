<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.mbhs.speedtrig.MovementResponseWindow">

    <TextView
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/timerTextView"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="40dp"
        android:textSize="30sp"
        android:text="question"
        />
    <TextView
        android:id="@+id/response"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text=" "
        android:textSize="28dp"
        android:layout_alignTop="@+id/auxiliary"
        android:layout_below = "@+id/timerTextView"
        android:layout_toRightOf="@+id/auxiliary"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button" />
    <TextView
        android:id="@+id/timerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/timer"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="34sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5sp" />
    <TextView
        android:id="@+id/auxiliary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Your Answer: "
        android:textSize="28dp"
        android:layout_below="@+id/question"

        android:layout_marginBottom="10dp" />
    <Button
        android:id="@+id/button11"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Next"
        android:onClick="openNextQuestion"
        android:textSize="21dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/button_submit"
        android:layout_alignEnd="@+id/button_submit" />
    <Button
        android:id="@+id/button15"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:onClick="startSubmitDialog"
        android:textSize="21dp"
        android:layout_alignTop="@+id/button11"
        android:layout_alignRight="@+id/button11"
        android:layout_alignEnd="@+id/button11"
        android:visibility="invisible" />
    <!--Button
        android:id="@+id/button12"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Back"
        android:onClick="openPreviousQuestion"
        android:textSize="21dp"
        android:layout_alignBottom="@+id/button11"
        android:layout_toLeftOf="@+id/button9"
        android:layout_toStartOf="@+id/button9"
        android:layout_alignParentStart="false"
        android:layout_alignParentLeft="false"/-->
</RelativeLayout>
